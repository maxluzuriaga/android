<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/Inspiration_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/inspiration_button_source"
            android:background="#00000000"
            android:onClick="updateWizard"
            android:tag="openContentTypeChooser" >
        	</ImageButton>

        <ImageButton
            android:id="@+id/What_if_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/what_if_button_source"
            android:background="#00000000"
            android:onClick="updateWizard"
            android:tag="openContentTypeChooser" >
        	</ImageButton>

        <ImageButton
            android:id="@+id/Problem_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/problem_button_source"
            android:background="#00000000"
            android:onClick="updateWizard"
            android:tag="openContentTypeChooser" >
            </ImageButton>

    </LinearLayout>

</LinearLayout>